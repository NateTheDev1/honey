{
    "compilerOptions": {
        "declaration": true,
        "target": "es5",
        "module": "esnext",
        "jsx": "react",
        "jsxFactory": "createElement",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "sourceMap": true,
        "lib": ["dom", "es2015", "es2016", "es2017"]
    },
    "include": ["src/**/*", "jsx.d.ts"],
    "exclude": ["node_modules"]
}
