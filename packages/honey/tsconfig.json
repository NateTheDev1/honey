{
    "compilerOptions": {
        "declaration": true,
        "target": "es5",
        "module": "esnext",
        "jsx": "preserve",
        "jsxFactory": "honey.createElement",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "noImplicitAny": false,
        "sourceMap": true,
        "lib": ["dom", "es2015", "es2016", "es2017"]
    },
    "include": ["src/**/*", "jsx.d.ts", "src/renderer.ts"],
    "exclude": ["node_modules"]
}
